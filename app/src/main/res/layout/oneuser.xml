<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardElevation="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="2dp"
        >
        <com.github.siyamed.shapeimageview.CircularImageView
            android:id="@+id/allusers_pic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/profilepic"
            android:tint="#D5D2D2"
            android:scaleType="centerCrop"
            app:siBorderColor="#000000"
            app:siBorderWidth="1dp"
            android:clickable="true"
            app:siBorderType="stroke"
            android:forceDarkAllowed="false"
            android:layout_margin="2dp"
            />
        <TextView
            android:id="@+id/allusers_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amol Saxena"
            android:layout_toRightOf="@+id/allusers_pic"
            android:layout_marginLeft="16dp"
            android:textSize="20dp"
            android:forceDarkAllowed="false"
            android:padding="2dp"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/allusers_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The lives goal is to be happy always."
            android:layout_toRightOf="@+id/allusers_pic"
            android:layout_marginLeft="16dp"
            android:textSize="14dp"
            android:textColor="#EAE3E3"
            android:forceDarkAllowed="false"
            android:padding="2dp"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/allusers_name"
            />
    </RelativeLayout>

</androidx.cardview.widget.CardView>