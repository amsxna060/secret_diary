<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:id="@+id/messageLayout"
    android:layout_margin="3dp"
    android:background="@android:color/transparent"
    >
    <com.github.siyamed.shapeimageview.CircularImageView
        android:id="@+id/chat_pic"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="5dp"
        android:layout_alignParentStart="true"
        android:tint="@color/unisex"
        android:visibility="visible"
        android:src="@drawable/profilepic"/>

    <TextView
        android:id="@+id/chat_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="25dp"
        android:paddingTop="10dp"
        android:textSize="16dp"
        android:maxWidth="300dp"
        android:autoLink="all"
        android:clickable="true"
        android:minWidth="80dp"
        android:allowUndo="true"
        android:forceDarkAllowed="false"
        android:text="This is a message"
        android:background="@drawable/senderbg"
        android:layout_toRightOf="@+id/chat_pic"
        android:layout_marginTop="14dp"
        android:textColor="@color/unisex"
        android:paddingBottom="10dp"
        android:paddingRight="25dp"
        android:focusable="true" />

    <TextView
        android:id="@+id/timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/chat_msg"
        android:text="03:30 am"
        android:textColor="@color/unisex"
        android:forceDarkAllowed="false"
        android:layout_alignRight="@+id/chat_msg"
        android:layout_marginRight="8dp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/seenlistener"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chat_msg"
        android:layout_alignLeft="@+id/chat_msg"
        android:forceDarkAllowed="false"
        android:text="Seen"
        android:textColor="@color/unisex"
        android:visibility="gone" />

</RelativeLayout>