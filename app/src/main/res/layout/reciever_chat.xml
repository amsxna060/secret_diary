<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_margin="3dp"
    android:id="@+id/messageLayout"
    android:background="@drawable/bgrecevier"
    android:layout_gravity="end"
    >
    <com.github.siyamed.shapeimageview.CircularImageView
        android:id="@+id/chat_pic"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:tint="#B9B6BD"
        android:layout_alignParentEnd="true"
        android:src="@drawable/profilepic"/>

    <TextView
        android:id="@+id/chat_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:textColor="#000000"
        android:textSize="18sp"
        android:text="message"
        android:maxWidth="300dp"
        android:clickable="true"
        android:autoLink="all"
        android:layout_toStartOf="@+id/chat_pic"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp"
        android:paddingStart="15dp"
        android:focusable="true" />



    <TextView
        android:id="@+id/timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/chat_msg"
        android:visibility="gone"
        android:layout_alignEnd="@+id/chat_msg"
        />
    <TextView
        android:id="@+id/seenlistener"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/chat_msg"
        android:layout_alignStart="@+id/chat_msg"
        android:visibility="gone"
        android:fontFamily="monospace"
        />


</RelativeLayout>